{% trans_default_domain 'FOSUserBundle' %}

<h2 class="content__main-heading">Восстановление пароля</h2>

<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="form fos_user_resetting_request">
    <div class = "form__row">
        <label class = "form__label" for="username">{{ 'resetting.request.username'|trans }}</label>
        <input class = "form_input" type="text" id="username" name="username" required="required" />
    </div>
    <div class="form__row form__row--controls">
        <input class="button" type="submit" value="{{ 'resetting.request.submit'|trans }}" />
    </div>
</form>