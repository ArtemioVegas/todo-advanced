{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form 'form/fields.html.twig' %}

<h2 class="content__main-heading">Смена пароля</h2>

{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'form fos_user_change_password', 'method' : 'POST' } }) }}

    <div class="form__row">
        {{ form_label(form.current_password, null, {'label_attr': {'class': 'form__label'}}) }}
        {{ form_widget(form.current_password, {'attr': {'class': 'form__input',}}) }}
        {{ form_errors(form.current_password) }}
    </div>

    <div class="form__row">
        {{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'form__label'}}) }}
        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form__input'}}) }}
        {{ form_errors(form.plainPassword.first) }}
    </div>

    <div class="form__row">
        {{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'form__label'}}) }}
        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form__input'}}) }}
        {{ form_errors(form.plainPassword.second) }}
    </div>

    <div class="form__row form__row--controls">
        <input class = "button" type="submit" value="{{ 'change_password.submit'|trans }}" />
    </div>

{{ form_end(form) }}